{% extends 'base.html.twig' %}

{% block title %}Скоринг клиентов{% endblock %}

{% block body %}
    <h1>Скоринг клиентов</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Номер телефона</th>
                <th>Email</th>
                <th>Согласие на обработку данных</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.name }}</td>
                <td>{{ client.surname }}</td>
                <td>{{ client.phone }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.agree ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_client_show', {'id': client.id}) }}">Просмотр</a>
                    <a href="{{ path('app_client_edit', {'id': client.id}) }}">Редактирование</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Клиенты не найдены</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_client_new') }}">Регистрация клиента</a>
{% endblock %}
